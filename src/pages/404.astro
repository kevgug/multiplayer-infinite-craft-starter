---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 Not Found">
  <main>
    <div class="min-h-screen flex flex-col items-center justify-center">
      <h1 class="text-6xl font-bold text-gray-100 mb-4">404</h1>
      <p class="text-xl text-gray-300 mb-8">Page Not Found</p>
      <a
        href="/"
        class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-300"
      >
        Go to Room Manager
      </a>
    </div>
  </main>
</Layout>

<style>
  body {
    @apply bg-slate-900;
  }
</style>
